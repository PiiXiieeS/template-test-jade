extends layout

block content
  div.jumbotron
    div.container
      h1= title
      p Welcome to #{title}
      p
        a.btn.btn-primary.btn-lg(role="button") Learn more &raquo;
  div.container
    div.row
      div.col-md-4
        h2 Meet the Flinstone Cast
        p 
          strong The Flintstones 
          | is an animated, prime-time American television sitcom that was broadcast from
          | September 30, 1960, to April 1, 1966, on ABC. The show was produced by 
          | Hanna-Barbera. The Flintstones was about a working-class Stone Age man's life with 
          | his family and his next-door neighbor and best friend.

        p
          a.btn.btn-default(href="list", role="button") View details &raquo;
